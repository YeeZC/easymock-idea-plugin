<idea-plugin>
  <id>me.zyee.easymockgemerator</id>
  <name>Mock Test Generator</name>
    <version>1.3</version>
  <vendor email="yee@zyee.me" url="http://yee.zyee.site">yee</vendor>

  <description><![CDATA[
      Enter short description for your plugin here.<br>
      <em>most HTML tags may be used</em>
    ]]></description>

  <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
      <applicationConfigurable instance="me.zyee.config.MockConfiguration"/>
      <applicationService serviceInterface="me.zyee.config.MockSetting"
                          serviceImplementation="me.zyee.config.MockSetting"/>
  </extensions>

  <actions>
    <!-- Add your actions here -->
    <action id="me.zyee.easymock.generator" class="me.zyee.action.MockGeneratorGroup" text="Mock Object"
            description="EasyMock Object">
          <add-to-group group-id="GenerateGroup" anchor="after" relative-to-action="JavaGenerateGroup1"/>
    </action>
    <action id="me.zyee.easymock.testcase" class="me.zyee.action.MockTestCaseGenerator"
            text="Mock TestCase" description="Mock TestCase">
          <add-to-group group-id="GenerateGroup" anchor="after" relative-to-action="JavaGenerateGroup1"/>
      </action>
  </actions>

</idea-plugin>